{
    "compilerOptions": {
      "allowJs": true,
      "module": "ESNext",
      "moduleResolution": "bundler",
      "jsx": "react-jsx",
      "strict": true,
      "isolatedModules": true,
      "target": "ESNext",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "noEmit": true,
      "baseUrl": "./resources/js",
      "paths": {
        "@/*": ["*"],
        "ziggy-js": ["./vendor/tightenco/ziggy"]
      }
    },
    "include": ["resources/js/**/*"]
  }
